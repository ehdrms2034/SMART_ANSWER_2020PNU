<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-126dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/register_ID"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:text="ID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <TextView
            android:id="@+id/register_password"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:text="Password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_ID"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/ID"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/border_layout"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintLeft_toRightOf="@id/register_ID"
            tools:layout_editor_absoluteY="82dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/border_layout"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintLeft_toRightOf="@id/register_password"
            app:layout_constraintTop_toBottomOf="@id/ID" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#707070"
            android:text="check"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="378dp"
            tools:layout_editor_absoluteY="84dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#707070"
            android:text="sign in"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="229dp"></com.google.android.material.button.MaterialButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>