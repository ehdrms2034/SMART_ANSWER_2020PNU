<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/friend_image"
        android:layout_width="0dp"
        android:src="@drawable/lion1"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/friend_name"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:padding="5dp"
        android:text="123"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="100dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/friend_image"
        app:layout_constraintRight_toLeftOf="@id/friend_talks"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="John Do"
        android:textColor="#000000"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/friend_talks"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/friend_name"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="It's a beautiful day"
        android:background="@drawable/border_layout"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>